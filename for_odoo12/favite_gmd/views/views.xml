	<template id="report_gmd_document">
    	<t t-call="web.external_layout">
        	<div class="page">
            	<div class="oe_structure"/>
        	</div>
    	</t>
	</template>


	<template id="report_gmd">
    	<t t-call="web.html_container">
        	<t t-foreach="docs" t-as="doc">
            	<t t-call="favite_gmd.report_gmd_document"/>
        	</t>
    	</t>
	</template>
  
