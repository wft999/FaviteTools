<odoo>
  <data>
	<!-- gmd -->
	<record id="gmd_form" model="ir.ui.view">
		<field name="name">favite_gmd.gmd.form.parameter</field>
		<field name="model">favite_gmd.gmd</field>
		<field name="arch" type="xml">
			<form string="Gmd" title="Gmd Parameter" duplicate="true" create="true">
				<sheet>
					<div class="oe_title">
						<h1>
							<field name="name" placeholder="Gmd name..." />
						</h1>
						<div>
							<field name="description" placeholder="Gmd summary..." />
							<field name="imgs_path" readonly="1" />
						</div>
					</div>
					<notebook></notebook>
				</sheet>
			</form>
		</field>
	</record>
	
	<record id="gmd_form_simplified" model="ir.ui.view">
		<field name="name">favite_gmd.gmd.form.simplified</field>
		<field name="model">favite_gmd.gmd</field>
		<field name="arch" type="xml">
			<form string="Gmd">
				<sheet>
					<group>
						<group>
							<field name="name" string="Gmd Name" />
							<label for="summary" string="Summary" />
							<div name="summary_def">
								<field name="description" />
							</div>
							<field name="imgs_path"/>
						</group>
					</group>
					<footer>
						<button string="Create" name="close_dialog" type="object"
							class="btn-primary" />
						<button string="Discard" class="btn-default"
							special="cancel" />
					</footer>

				</sheet>
			</form>
		</field>
	</record>   

	<record id="gmd_view_kanban" model="ir.ui.view">
		<field name="name">favite_gmd.gmd.kanban</field>
		<field name="model">favite_gmd.gmd</field>
		<field name="arch" type="xml">
			<kanban  on_create="favite_gmd.open_create_gmd" class="oe_background_grey o_kanban_dashboard  o_emphasize_colors">
				<field name="name" />
				<field name="description" />
				<field name="write_uid"/>
				<field name="write_date"/>
				<templates>
					<t t-name="kanban-box">
						<div class="oe_kanban_global_click o_has_icon">
							<div class="o_project_kanban_main">
								<div class="o_kanban_card_content">
									<div class="o_kanban_primary_left">
										<div class="o_primary">
											<span>
												<t t-esc="record.name.value" />
											</span>
											<span t-if="record.description.value">
												<strong>
													<t t-esc="record.description.value" />
												</strong>
											</span>
											<br />
											<span>
												<b>Modified by : </b>
												<br />
												<t t-esc="record.write_uid.value" />
												<t t-esc="record.write_date.value" />
											</span>
										</div>
									</div>
								</div>
								<a class="o_kanban_manage_toggle_button o_left" name="open_map" type="object">
									<i class="fa fa-ellipsis-v" />
								</a>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>
	
	
	<record id="favite_gmd_geo_map" model="ir.ui.view">
		<field name="model">favite_gmd.gmd</field>
		<field name="arch" type="xml">
			<map string="Fields"  duplicate="false">
				<field name="geo" />
			</map>
		</field>
	</record>


	<record id="open_create_gmd" model="ir.actions.act_window">
		<field name="name">Create a Gmd</field>
		<field name="res_model">favite_gmd.gmd</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="gmd_form_simplified" />
		<field name="target">new</field>
	</record>

    <!-- server action to the one above -->
    
    <record model="ir.actions.server" id="favite_gmd.action_server_kanban">
      <field name="name">gmd server</field>
      <field name="model_id" ref="model_favite_gmd_gmd"/>
      <field name="state">code</field>
      <field name="code">
        action = model.open_kanban()
      </field>
    </record>
   

    <!-- Top menu item -->
    
    <menuitem name="gmd" id="favite_gmd.menu_root"/>
   
    <!-- menu categories -->
    
    <menuitem name="Data" id="favite_gmd.data" parent="favite_gmd.menu_root"/>
    <menuitem name="Config" id="favite_gmd.menu_config" parent="favite_gmd.menu_root"/>
   
    <!-- actions -->
    
    <menuitem name="gmd" id="gmd" parent="favite_gmd.data" sequence="11"
              action="favite_gmd.action_server_kanban"/>
   
  </data>
</odoo>