<odoo>
  <data>
        
	<!-- bif -->
	<record id="gate_form" model="ir.ui.view">
		<field name="name">lm_gate.gate.form</field>
		<field name="model">lm_gate.gate</field>
		<field name="arch" type="xml">
			<form string="Gate" title="Bif Parameter" duplicate="false" create="false" delete="false">
				<sheet>
					<div class="oe_title">
						<h1>
							<field name="name" placeholder="Gate name..." />
						</h1>
						<div>
							<field name="description" placeholder="Gate summary..." />
						</div>
					</div>
					<notebook>
						<page string="Modbus TCP">
                            <field name="modbus_tcp_ids" widget="one2many_list">
                                <tree editable="bottom" string="modbus tcp Items">
                                    <field name="name"/>
                                    <field name="active"/>
                                    <field name="description"/>
                                    <field name="byte_timeout_sec"/>
                                    <field name="byte_timeout_usec"/>
                                    <field name="response_timeout_sec"/>
                                    <field name="response_timeout_usec"/>
                                    <field name="ip"/>
                                    <field name="port"/>
                                </tree>
                            </field>							
						</page>
						<page string="Modbus RTU">
                            <field name="modbus_rtu_ids" widget="one2many_list">
                                <tree editable="bottom" string="modbus rtu Items">
                                    <field name="name"/>
                                    <field name="active"/>
                                    <field name="description"/>
                                    <field name="byte_timeout_sec"/>
                                    <field name="byte_timeout_usec"/>
                                    <field name="response_timeout_sec"/>
                                    <field name="response_timeout_usec"/>
                                    <field name="mode"/>
                                    <field name="rts"/>
                                    <field name="rts_delay"/>
                                    <field name="device"/>
                                    <field name="baud"/>
                                    <field name="parity"/>
                                    <field name="data_bit"/>
                                    <field name="stop_bit"/>
                                </tree>
                            </field>							
						</page>		
						<page string="Modbus PI">
                            <field name="modbus_pi_ids" widget="one2many_list">
                                <tree editable="bottom" string="modbus pi Items">
                                    <field name="name"/>
                                    <field name="active"/>
                                    <field name="description"/>
                                    <field name="byte_timeout_sec"/>
                                    <field name="byte_timeout_usec"/>
                                    <field name="response_timeout_sec"/>
                                    <field name="response_timeout_usec"/>
                                    <field name="node"/>
                                    <field name="service"/>
                                </tree>
                            </field>							
						</page>												
					</notebook>
				</sheet>
			</form>
		</field>
	</record>
	
	<record id="gate_form_simplified" model="ir.ui.view">
		<field name="name">lm_gate.gate.form.simplified</field>
		<field name="model">lm_gate.gate</field>
		<field name="arch" type="xml">
			<form string="Gate">
				<sheet>
					<group>
						<field name="name" string="Name" />
						<label for="summary" string="Summary" />
						<div name="summary_def">
							<field name="description" />
						</div>
					</group>
					<footer>
						<button string="Create" name="close_dialog" type="object"
							class="btn-primary" />
						<button string="Discard" class="btn-default"
							special="cancel" />
					</footer>

				</sheet>
			</form>
		</field>
	</record>   

	<record id="gate_view_kanban" model="ir.ui.view">
		<field name="name">lm_gate.gate.kanban</field>
		<field name="model">lm_gate.gate</field>
		<field name="arch" type="xml">
			<kanban  on_create="lm_gate.open_create_gate" class="oe_background_grey o_kanban_dashboard  o_emphasize_colors">
				<field name="description" />
				<field name="write_uid"/>
				<field name="write_date"/>
				<templates>
					<t t-name="kanban-box">
						<div class="oe_kanban_global_click o_has_icon oe_kanban_color_4">
							<div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
<!--                                         <a name="open_map" type="object" role="menuitem" class="dropdown-item o_hidden">Edit</a> -->
           								<a type="edit" class="dropdown-item">Setting</a>
           								<a type="edit" class="dropdown-item">Export</a>
           								<a type="delete" class="dropdown-item">Delete</a>
                                    </div>
                                </div>
                                
                                <div class="oe_kanban_content">
                                    <div>
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="text-muted o_kanban_record_subtitle">
                                        <span> <t t-esc="record.description.value"/></span>
                                    </div>
                                    
                                    <div>
                                        <strong class="o_kanban_record_title">Modified by:</strong>
                                    </div>
                                    <div>
                                        <span>
											<t t-esc="record.write_uid.value" />
											<t t-esc="record.write_date.value" />
										</span>
                                    </div>
                                </div>
                                <div class="oe_clear"/>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>

	<record id="open_create_gate" model="ir.actions.act_window">
		<field name="name">Create a Gate</field>
		<field name="res_model">lm_gate.gate</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="gate_form_simplified" />
		<field name="target">new</field>
	</record>
	
	<record id="open_kanban_gate" model="ir.actions.act_window">
		<field name="name">Gate</field>
		<field name="res_model">lm_gate.gate</field>
		<field name="view_type">form</field>
		<field name="view_mode">kanban,form</field>
		<field name="target">current</field>
	</record>

