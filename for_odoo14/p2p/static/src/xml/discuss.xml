<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!--
        @param {mail/static/src/widgets/discuss/discuss.js} widget
    -->
    <t t-name="p2p.Discuss">
        <div class="o_widget_Discuss">
        	<div>
            	<button class="o_call btn btn-primary" type="button" title="Call">Call</button>
            	<button class="o_accept btn btn-secondary" type="button" title="Accept">Accept</button>
        	</div>
        	<video width="320" height="240" id="self" muted="1" autoplay="1"></video>
        	<video width="320" height="240" id="remote" muted="1" autoplay="1"></video>
        </div>
    </t>

    <!-- @param {boolean} isMobile -->
    <t t-name="p2p.Discuss.DiscussControlButtons">
        <div>
            <button class="o_call btn btn-primary" type="button" title="Call">Call</button>
            <button class="o_accept btn btn-secondary" type="button" title="Accept">Accept</button>
        </div>
    </t>

</templates>
