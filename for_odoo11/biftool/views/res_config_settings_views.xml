<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.biftool</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
            	<xpath expr="//div[hasclass('settings_tab')]" position="attributes" >
            		<attribute name="class">settings_tab o_hidden</attribute>
            	</xpath>
            	<xpath expr="//div[hasclass('o_setting_search')]" position="attributes" >
            		<attribute name="class">o_setting_search o_hidden</attribute>
            	</xpath>
                <xpath expr="//div[hasclass('settings')]" position="inside" >
                    <div class="app_settings_block" data-string="Biftool" string="Biftool" data-key="biftool" groups="biftool.group_bif_manager">
                        <div class="row mt16 o_settings_container">
                       
                        <div class="col-xs-12 col-md-6 o_setting_box">
                                    <div class="o_setting_right_pane">
                                        <label string="Region"/>
                                        <div class="content-group">
                                            <div class="mt16 row">
                                                <label  string="height(um):" class="col-xs-3 col-md-3 o_light_label"/>
                                                <field name="region_height" class="oe_inline" required="1"/>
                                            </div>
                                            <div class="mt16 row">
                                                <label  string="overlap(um):" class="col-xs-3 col-md-3 o_light_label"/>
                                                <field name="region_overlap" class="oe_inline" required="1"/>
                                            </div>
                                        </div>
                                    </div>
							</div>
							
                        	<div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': 0}">
                                    <div class="o_setting_right_pane">
                                        <label string="polygon submark"/>
                                        <div class="content-group">
                                            <div class="mt16 row">
                                                <label  string="offsetX(um):" class="col-xs-3 col-md-3 o_light_label"/>
                                                <field name="submark_offsetX" class="oe_inline" required="1" />  
                                            </div>
                                            <div class="mt16 row">
                                                <label  string="offsetY(um):" class="col-xs-3 col-md-3 o_light_label"/>
                                                <field name="submark_offsetY" class="oe_inline" required="1" />
                                            </div>
                                        </div>
                                    </div>
							</div>
							
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        


       	<record id="action_bif_config_settings" model="ir.actions.act_window">
            <field name="name">General Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'biftool'}</field>
    	</record>
    	
    	<record id="action_bif_publish_settings" model="ir.actions.act_window">
        	<field name="name">Publish Settings</field>
        	<field name="res_model">padtool.directory</field>
        	<field name="view_type">form</field>
        	<field name='view_mode'>tree</field>
        	<field name="view_id" ref="padtool.padtool_directory_view_tree"/>
        	<field name="target">current</field>
        	<field name="context">{'default_model':'biftool.bif'}</field>
        	<field name="domain">[('model','=', 'biftool.bif')]</field>
    	</record>

        <menuitem id="biftool.menu_setting" name="Configuration" parent="biftool.menu_root"
            sequence="101" groups="biftool.group_bif_manager"/>
        <menuitem id="menu_bif_general_settings" name="General" parent="biftool.menu_setting"
            sequence="0" action="action_bif_config_settings"/>
        <menuitem id="menu_bif_publish_settings" name="Publish" parent="biftool.menu_setting"
            sequence="1" action="action_bif_publish_settings"/>
    </data>
</odoo>
