<odoo>
  <data>
    <!-- explicit list view definition -->
    
   <record id="view_camera_search_form" model="ir.ui.view">
            <field name="name">biftool.camera.search.form</field>
            <field name="model">biftool.camera</field>
            <field name="arch" type="xml">
               <search string="cameras">
                    <field name="bif_id"/>
                </search>
            </field>
        </record>
        
    <record id="view_save_region_search_form" model="ir.ui.view">
            <field name="name">biftool.save_region.search.form</field>
            <field name="model">biftool.save_region</field>
            <field name="arch" type="xml">
               <search string="save_region">
                    <field name="bif_id"/>
                </search>
            </field>
        </record>
        
   <record id="view_review_region_search_form" model="ir.ui.view">
            <field name="name">biftool.review_region.search.form</field>
            <field name="model">biftool.review_region</field>
            <field name="arch" type="xml">
               <search string="review_region">
                    <field name="bif_id"/>
                </search>
            </field>
        </record>
        
    <record id="view_mark_search_form" model="ir.ui.view">
            <field name="name">biftool.mark.search.form</field>
            <field name="model">biftool.mark</field>
            <field name="arch" type="xml">
               <search string="mark">
                    <field name="bif_id"/>
                </search>
            </field>
        </record>
        
    <record id="view_gsp_search_form" model="ir.ui.view">
            <field name="name">biftool.gsp.search.form</field>
            <field name="model">biftool.gsp</field>
            <field name="arch" type="xml">
               <search string="gsp">
                    <field name="bif_id"/>
                </search>
            </field>
        </record>
        
    <record id="view_subpanel_search_form" model="ir.ui.view">
            <field name="name">biftool.subpanel.search.form</field>
            <field name="model">biftool.subpanel</field>
            <field name="arch" type="xml">
               <search string="subpanel">
                    <field name="bif_id"/>
                </search>
            </field>
        </record>
    
    <record id="act_biftool_bif_2_camera" model="ir.actions.act_window">
            <field name="name">Cameras</field>
            <field name="res_model">biftool.camera</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_bif_id': [active_id],
                'default_bif_id': active_id,
            }</field>
            <field name="search_view_id" ref="view_camera_search_form"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click <i>Create</i> to start a new camera.
                </p>
            </field>
        </record>
        
   <record id="act_biftool_bif_2_save_region" model="ir.actions.act_window">
            <field name="name">Save Region</field>
            <field name="res_model">biftool.save_region</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_bif_id': [active_id],
                'default_bif_id': active_id,
            }</field>
            <field name="search_view_id" ref="view_save_region_search_form"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click <i>Create</i> to start a new svae_region.
                </p>
            </field>
        </record>
        
   <record id="act_biftool_bif_2_review_region" model="ir.actions.act_window">
            <field name="name">review Region</field>
            <field name="res_model">biftool.review_region</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_bif_id': [active_id],
                'default_bif_id': active_id,
            }</field>
            <field name="search_view_id" ref="view_review_region_search_form"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click <i>Create</i> to start a new review_region.
                </p>
            </field>
        </record>
        
    <record id="act_biftool_bif_2_mark" model="ir.actions.act_window">
            <field name="name">marks</field>
            <field name="res_model">biftool.mark</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_bif_id': [active_id],
                'default_bif_id': active_id,
            }</field>
            <field name="search_view_id" ref="view_mark_search_form"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click <i>Create</i> to start a new mark.
                </p>
            </field>
        </record>
        
    <record id="act_biftool_bif_2_gsp" model="ir.actions.act_window">
            <field name="name">gsp</field>
            <field name="res_model">biftool.gsp</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_bif_id': [active_id],
                'default_bif_id': active_id,
            }</field>
            <field name="search_view_id" ref="view_gsp_search_form"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click <i>Create</i> to start a new gsp.
                </p>
            </field>
        </record>
        
   <record id="act_biftool_bif_2_subpanel" model="ir.actions.act_window">
            <field name="name">subpanels</field>
            <field name="res_model">biftool.subpanel</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{
                'search_default_bif_id': [active_id],
                'default_bif_id': active_id,
            }</field>
            <field name="search_view_id" ref="view_subpanel_search_form"/>
