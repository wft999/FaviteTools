                <p class="o_view_nocontent_smiling_face">
                    Click <i>Create</i> to start a new subpanel.
                </p>
            </field>
        </record>

    <record model="ir.ui.view" id="bif_view_form">
      <field name="name">Bif Parameter</field>
      <field name="model">biftool.bif</field>
      <field name="arch" type="xml">
        <form  string="Module" title="Bif Parameter" duplicate="true" create="true">
        	<sheet>
        		<div class="oe_button_box" name="button_box" groups="base.group_user">
                        <button class="oe_stat_button" type="action"
                            name="%(act_biftool_bif_2_camera)d" icon="fa-camera">
                            <field string="Camera" name="camera_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="action"
                            name="%(act_biftool_bif_2_save_region)d" icon="fa-object-ungroup">
                            <field string="Save Region" name="save_region_count" widget="statinfo" />
                        </button>
                        <button class="oe_stat_button" type="action"
                            name="%(act_biftool_bif_2_mark)d" icon="fa-plus-square">
                            <field string="Mark" name="mark_count" widget="statinfo" />
                        </button>
                        <button class="oe_stat_button" type="action"
                            name="%(act_biftool_bif_2_gsp)d" icon="fa-newspaper-o">
                            <field string="Gsp" name="gsp_count" widget="statinfo" />
                        </button>
                        <button class="oe_stat_button" type="action"
                            name="%(act_biftool_bif_2_subpanel)d" icon="fa-object-group">
                            <field string="Subpanel" name="subpanel_count" widget="statinfo" />
                        </button>
                        <button class="oe_stat_button" type="action"
                            name="%(act_biftool_bif_2_review_region)d" icon="fa-object-ungroup">
                            <field string="Review Region" name="review_region_count" widget="statinfo" />
                        </button>
                    </div>
                    
            	<div class="oe_title">
                	<h1><field name="name" placeholder="Pad name..."/></h1>
                	<div>
                		<field name="summary" placeholder="Pad summary..."/>
                	</div>
                </div>
                <div class="oe_clear"/>
        	</sheet>
      	</form>
      </field>
    </record>
    
    <record id="bif_view_kanban" model="ir.ui.view">
		<field name="name">biftool.bif.kanban</field>
		<field name="model">biftool.bif</field>
		<field name="arch" type="xml">
		<kanban on_create="biftool.open_create_bif" class="oe_background_grey o_kanban_dashboard o_pad_kanban  o_emphasize_colors">
			<field name="name"/>
			<field name="summary"/>
			<field name="write_uid"/>
			<field name="write_date"/>
				<templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_has_icon">
                                <div class="o_project_kanban_main">
                                    <div class="o_kanban_card_content">
                                        <div class="o_kanban_primary_left">
                                            <div class="o_primary">
                                                <span><t t-esc="record.name.value"/></span>
                                                <span t-if="record.summary.value">
                                                    <strong><t t-esc="record.summary.value"/></strong>
                                                </span>
                                                <br/>
                                                <span>
                            						<b>Modified by : </b><br/>
                            						<t t-esc="record.write_uid.value"/>  <t t-esc="record.write_date.value"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                	<a class="o_kanban_manage_toggle_button o_left" href="#" ><i class="fa fa-ellipsis-v" /></a>
                                </div>

                            </div>
                        </t>
                    </templates>
		</kanban>
		</field>
	</record>
        
   <record id="bif_view_form_simplified" model="ir.ui.view">
            <field name="name">bif.view.form.simplified</field>
            <field name="model">biftool.bif</field>
            <field name="arch" type="xml">
                <form string="Bif">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Bif Name"/>
                                <label for="summary" string="Summary"/>
                                <div name="summary_def">
                                    <field name="summary"/>
                                </div>
                            </group>
                        </group>
                        <footer>
                            <button string="Create" name="close_dialog" type="object" class="btn-primary"/>
                            <button string="Create &amp; Edit" name="edit_dialog" type="object" class="btn-primary"/>
                            <button string="Discard" class="btn-default" special="cancel"/>
                        </footer>

                    </sheet>
                </form>
            </field>
        </record>    


    <!-- actions opening views on models -->
    <record id="open_create_bif" model="ir.actions.act_window">
            <field name="name">Create a Bif</field>
            <field name="res_model">biftool.bif</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="bif_view_form_simplified"/>
            <field name="target">new</field>
   	</record>
    
    <record id="ir_actions_bif_kanban" model="ir.actions.act_window">
            <field name="name">Bif List</field>
            <field name="res_model">biftool.bif</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
            <field name="target">current</field>
        </record>
        
    <record id="ir_actions_server_bif" model="ir.actions.server">
            <field name="name">Bif</field>
            <field name="model_id" ref="biftool.model_biftool_bif"/>
            <field name="state">code</field>
            <field name="code">action = model.open_kanban()</field>
        </record>
        
    <!-- Top menu item -->
    <menuitem name="Bif" id="biftool.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Bif List" id="biftool.menu_bif_root" parent="biftool.menu_root" sequence="102" action="ir_actions_server_bif"/>
    <!-- actions -->
    
  </data>
</odoo>